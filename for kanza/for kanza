    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const forgivenessBtn = document.getElementById('forgivenessBtn');
            const thanksMessage = document.getElementById('thanksMessage');

            // --- Logika Tombol Maaf ---
            forgivenessBtn.addEventListener('click', () => {
                // Sembunyikan tombol
                forgivenessBtn.style.display = 'none';

                // Tampilkan pesan terima kasih
                thanksMessage.textContent = 'üíñ MAKASIHH BANYAKKK KANZAAAAAAA üíñ';
                thanksMessage.style.opacity = 1;
            });

            // --- Logika Hujan Love (Love Rain Animation) ---
            const loveRainContainer = document.getElementById('loveRainContainer');
            const maxLoves = 50; 
            
            function createLove() {
                const love = document.createElement('div');
                love.classList.add('love');
                love.innerHTML = '&#x2764;'; 

                // Posisi dan Ukuran Acak
                const size = Math.random() * 15 + 8; /* Ukuran love lebih kecil */
                const duration = Math.random() * 10 + 5; 
                
                love.style.left = Math.random() * 100 + 'vw';
                love.style.fontSize = size + 'px';
                love.style.opacity = Math.random() * 0.6 + 0.3;
                love.style.animationDuration = duration + 's';
                love.style.animationDelay = Math.random() * 5 + 's';

                loveRainContainer.appendChild(love);

                // Hapus hati setelah selesai jatuh
                setTimeout(() => {
                    love.remove();
                }, duration * 1000);
            }

            // Atur interval untuk menciptakan hati baru
            function startLoveRain() {
                setInterval(() => {
                    if (loveRainContainer.children.length < maxLoves) {
                        createLove();
                    }
                }, 500); 
            }
            
            startLoveRain();
        });
    </script>
